---
import Layout from '../layouts/Layout.astro';
import NewsCard from '../components/NoticiasCard.astro';
import blogPosts from '../data/blogPost.json';
---

<Layout title="Blog de Tecnología">
  <main class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900">Nuestro Blog de Tecnología</h1>
        <p class="text-lg text-gray-600 mt-2">Guías, noticias y comparativas para entusiastas del hardware.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        {blogPosts.map(post => (
          <NewsCard 
            title={post.title}
            description={post.description}
            imageUrl={post.imageUrl}
            link={post.link}  
            category={post.category}
          />
        ))}
        
      </div>
    </div>
  </main>
</Layout>