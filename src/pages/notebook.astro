---
//Importa solo los datos y el componente de Notebooks
import notebooks from '../data/notebook.json';
import NotebookCard from '../components/NotebookCard.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main class="max-w-7xl mx-auto py-8 px-4">
        
        <h1 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">Notebooks</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {
                notebooks.map(notebook => (
                    <NotebookCard producto={notebook} />
                ))
            }
        </div>

    </main>
</Layout>